@model List<ProductModel>;
<h1>Products</h1>
<table class="table">
    <tr>
        <th>Category</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.CategoryName</td>
            <td><a asp-area="" asp-controller="Product" asp-action="ProductView" asp-route-name="@product.Name">@product.Name</a></td>
            <td>@product.Description</td>
            <td>@product.Price</td> 
        </tr>
    }
</table>