@model HomeIndexModel

<div class="container">
      <div class="row">
        <div class="col-sm-4">
          <div class="list-group">
            <a href="#" class="list-group-item active">
              Categories
            </a>
                @foreach (var category in Model.Categories)
                {
                    <a asp-controller="Home" asp-action="Index" asp-route-selectedCategory="@category.ID" class="list-group-item">
                        @category.Name <span class="badge" style="color:black;">@category.Products.Count</span>
                    </a>
                }
            </div>
        </div>
        <div class="col-sm-8">
            <div>
                <div class="row">
                    @if (Model.SelectedCategory != null && 
                        Model.Categories.Find(c=> c.ID == (int)Model.SelectedCategory).Products.Count == 0)
                    {                    
                         <p>There are no products in selected category</p>
                    }
                    else if(Model.SelectedCategory != null)
                    {
                     @foreach(var product in Model.Categories.Find(c=> c.ID == (int)Model.SelectedCategory).Products)
                        {
                            <div class="col-sm-6 col-md-4">
                                <div>
                                  <img class="img-thumbnail" src="data:image/svg+xml;base64," alt="...">
                                  <div class="caption text-center">
                                    <h3><a asp-controller="Product" asp-action="ProductView" asp-route-name="@product.Name">@product.Name</a></h3>
                                    <p>Price: <span>@product.Price€</span></p>
                                    <p><a href="#" class="btn btn-primary" role="button">Add to cart</a></p>
                                  </div>
                                </div>
                            </div>                    
                        }
                }               
            </div>
          </div>
        </div>
      </div>
    </div>