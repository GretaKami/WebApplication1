@model List<ProductModel>;
@if(@Model.Count == 0)
{
    <p>This category has no products</p>
}
else
{
    <div>    
    <h1>@Model[0].CategoryName</h1> 
    </div>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        @foreach(var product in Model)
        {
            <tr>
                <td><a asp-area="" asp-controller="Product" asp-action="ProductView" asp-route-name="@product.Name">@product.Name</a></td>
                <td>@product.Description</td>
                <td>@product.Price</td>
            </tr>
        }
    </table>
    
}


<p><a asp-area="" asp-controller="Categories" asp-action="Index" >Back</a></p>