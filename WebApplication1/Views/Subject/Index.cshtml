@model List<SubjectModel>

@if(Model.Count() == 0){
    <p>There are no subjects</p>
}
else{
    <table class="table table-hover">
        <tr>
            <th>
                Id 
                <a asp-controller="subject" asp-action="Index" asp-route-sort="Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                    </svg>
                </a>
            </th>
            <th>Title 
                <a asp-controller="subject" asp-action="Index" asp-route-sort="Title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                    </svg>
                </a>
            </th>
        </tr>
        @foreach(var subject in Model)
        {
            <tr>
                <td>@subject.Id</td>
                @if(@subject.Grades.Count != 0)
                {
                    <td>
                        <a asp-controller="subject" asp-action="View" asp-route-id="@subject.Id">
                            @subject.Title
                        </a>
                    </td>
                }
                else{<td>@subject.Title</td>}
            </tr>
        }
    </table>
}
<a asp-controller="Subject" asp-action="AddSubject" method="get">
    <button type="button" class="btn btn-primary btn-sm">New subject</button>
</a>
